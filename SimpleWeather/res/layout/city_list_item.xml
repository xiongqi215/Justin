<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@android:color/white"
    >
    
    	<TextView   
               android:layout_width="fill_parent"
       			 android:layout_height="wrap_content"
                android:id="@+id/group_title"   
                android:textSize="30sp"
                android:textColor="@android:color/black"
                android:paddingLeft="14.0dip"
                android:paddingRight="10.0dip"
                android:text="B"
                android:background="@drawable/biz_plugin_weather_selectcity_index_bg"
                />  
        
        <ImageView
        		android:id="@+id/friends_item_alpha_line"
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:background="@drawable/city_list_divider" />
       <RelativeLayout android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           >
            <TextView   
                android:layout_width="fill_parent"
       		    android:layout_height="wrap_content"
                android:id="@+id/city_title"
                android:textSize="15sp"
                android:textColor="@android:color/primary_text_light"
                android:text="北京"
                android:gravity="center_vertical"
        		android:minHeight="40.0dip"
        		android:paddingLeft="20dip"
        		 android:background="@drawable/kaixin_list_item_bg"
                />

            <ImageView
                android:id="@+id/btn_sc"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/sc1" />
           
       </RelativeLayout>
           


</LinearLayout>
